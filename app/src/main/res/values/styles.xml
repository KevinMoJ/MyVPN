<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- navigation icon color -->
        <item name="colorControlNormal">@android:color/white</item>

        <!-- color of the menu overflow icon -->
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.FullScreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.NoBackground.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>
    <style name="AppTheme.NoBackground.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="ThemeToolbar" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- navigation icon color -->
        <item name="colorControlNormal">@android:color/white</item>

        <!-- color of the menu overflow icon -->
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>
</resources>

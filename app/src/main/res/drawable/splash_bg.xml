<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#5067C4"
                android:endColor="#54BAE0"
                android:angle="90"
                />
        </shape>
    </item>
    <item
        android:gravity="fill_horizontal|bottom"
        >
        <bitmap android:src="@drawable/bg_bottom" android:gravity="bottom|fill_horizontal"/>
    </item>
</layer-list>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="20dp"
    >
    <!--android:background="@drawable/dialog_no_internet_bg"-->
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_error_24dp"
        android:tint="@color/disconnect_red"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="200dp"
        android:textColor="@color/primary_white_text"
        android:textSize="@dimen/large_text"
        android:layout_marginTop="15dp"
        android:id="@+id/message"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <Button
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:text="@android:string/no"
                android:textColor="@color/secondary_white_text"
                android:background="@drawable/dialog_button_no"
                android:layout_gravity="center_horizontal"
                android:id="@+id/button2"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <Button
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:text="@android:string/yes"
                android:textColor="@color/secondary_white_text"
                android:background="@drawable/dialog_button_yes"
                android:layout_gravity="center_horizontal"
                android:id="@+id/button1" />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
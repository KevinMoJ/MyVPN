<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_custom_time_reminder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.androapplite.shadowsocks.activity.CustomTimeReminderActivity"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/custome_time_reminder_title"
        android:paddingLeft="@dimen/margin_4dp"
        android:paddingRight="@dimen/margin_4dp"
        android:id="@+id/title"
        android:focusable="true"
        android:clickable="true"
        >
        <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:layout_marginLeft="@dimen/margin_4dp"/>
        <ImageButton
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/ic_close_black_24dp"
            android:tint="@color/grey_cc"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="?android:selectableItemBackground"
            android:id="@+id/close"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custome_time_reminder_body"
        android:paddingLeft="@dimen/margin_24dp"
        android:paddingRight="@dimen/margin_24dp"
        android:paddingTop="@dimen/half_standard_margin"
        android:paddingBottom="@dimen/half_standard_margin"
        android:id="@+id/body"
        />
</LinearLayout>

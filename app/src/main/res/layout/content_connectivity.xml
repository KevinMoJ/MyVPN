<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.androapplite.shadowsocks.activity.ConnectivityActivity"
    tools:showIn="@layout/app_bar_connectivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <fragment
            android:layout_marginTop="@dimen/standard_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.androapplite.shadowsocks.fragment.ConnectivityFragment"
            android:id="@+id/connection_fragment"
            tools:layout="@layout/fragment_connectivity"
            android:layout_centerHorizontal="true"/>
        <fragment
            android:layout_marginTop="@dimen/standard_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/half_standard_margin"
            android:id="@+id/traffic_fragment"
            android:name="com.androapplite.shadowsocks.fragment.TrafficRateFragment"
            tools:layout="@layout/fragment_traffic_rate"
            >
        </fragment>
    </LinearLayout>
    <com.google.android.gms.ads.AdView
        android:id="@+id/ad_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="LARGE_BANNER"
        ads:adUnitId="@string/banner_ad_unit_id" />
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <FrameLayout
        android:id="@+id/vpn_server_list_item"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/server_list_item_bg"
        android:paddingLeft="@dimen/standard_margin"
        android:paddingRight="@dimen/standard_margin"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/vpn_name"
            android:text="@string/vpn_name_opt"
            android:textColor="@color/primary_black_text"
            android:textSize="@dimen/medium_text"
            android:layout_gravity="center_vertical"
            android:gravity="left|center_vertical"
            android:paddingLeft="64dp"
            />
        <com.joooonho.SelectableRoundedImageView
            android:layout_width="26dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_flag_us"
            android:scaleType="fitCenter"
            app:sriv_left_top_corner_radius="3dp"
            app:sriv_right_top_corner_radius="3dp"
            app:sriv_left_bottom_corner_radius="3dp"
            app:sriv_right_bottom_corner_radius="3dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/vpn_icon"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="27dp"
            android:src="@drawable/server_signal_4"
            android:layout_gravity="right|center_vertical"
            android:id="@+id/signal"/>
    </FrameLayout>

</FrameLayout>
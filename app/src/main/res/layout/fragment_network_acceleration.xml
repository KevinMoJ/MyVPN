<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/network_acc_bg"
                tools:context="com.androapplite.shadowsocks.fragment.NetworkAccelerationFragment">

    <Button
        android:id="@+id/acc_btn"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_above="@+id/net_speed_ad_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_green_bg"
        android:text="@string/accelerate_immediately"
        android:textAllCaps="false"
        android:textColor="@color/primary_white_text"
        android:textSize="14sp"/>


    <ImageView
        android:id="@+id/rocket_iv"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_above="@id/acc_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/common_20"
        android:src="@drawable/rocket"/>

    <FrameLayout
        android:id="@+id/net_speed_ad_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>

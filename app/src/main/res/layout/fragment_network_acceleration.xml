<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.androapplite.shadowsocks.fragment.NetworkAccelerationFragment"
    android:background="@drawable/network_acc_bg">

    <Button
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/button_green_bg"
        android:layout_gravity="center_horizontal|bottom"
        android:text="@string/accelerate_immediately"
        android:textSize="14sp"
        android:textColor="@color/primary_white_text"
        android:layout_marginBottom="30dp"
        android:id="@+id/acc_btn"
        android:textAllCaps="false"
        />
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/rocket"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="90dp"
        android:id="@+id/rocket_iv"/>
</FrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/pager_icon"
        android:layout_width="@dimen/common_200"
        android:layout_height="@dimen/common_200"
        android:scaleType="centerCrop"
        android:src="@drawable/recommend_rocket_icon"/>

    <TextView
        android:id="@+id/pager_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_20"
        android:text="@string/banner_1_title"
        android:textColor="@color/primary_black_text"
        android:textSize="@dimen/common_text_size_20sp"/>

    <TextView
        android:id="@+id/pager_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_30"
        android:layout_marginRight="@dimen/common_30"
        android:layout_marginTop="@dimen/common_10"
        android:gravity="center"
        android:text="@string/banner_1_message"
        android:textColor="@color/primary_black_text"
        android:textSize="@dimen/common_text_size_16sp"/>

    <ImageView
        android:id="@+id/pager_flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_10"
        android:src="@drawable/banner_1"/>

</LinearLayout>
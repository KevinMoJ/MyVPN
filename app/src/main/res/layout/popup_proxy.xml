<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/standard_margin"
    android:paddingBottom="@dimen/standard_margin"
    android:background="@drawable/overlay_popup_menu_bg">
    <LinearLayout
        android:layout_width="wrap_content"
        android:minWidth="148dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="@dimen/standard_margin"
        android:paddingLeft="@dimen/standard_margin"
        android:paddingTop="@dimen/half_standard_margin"
        android:paddingBottom="@dimen/half_standard_margin"
        android:background="@drawable/popup_menu_item_bg"
        android:gravity="center_vertical"
        android:focusable="true"
        android:clickable="true"
        >

        <com.joooonho.SelectableRoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_flag_us"
            android:scaleType="centerCrop"
            app:sriv_left_top_corner_radius="3dp"
            app:sriv_right_top_corner_radius="3dp"
            app:sriv_left_bottom_corner_radius="3dp"
            app:sriv_right_bottom_corner_radius="3dp"
             />
        <TextView
            android:layout_marginLeft="@dimen/standard_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vpn_name_us"
            android:textColor="@color/primary_white_text"
            android:textSize="@dimen/medium_text"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:minWidth="148dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="@dimen/standard_margin"
        android:paddingLeft="@dimen/standard_margin"
        android:paddingTop="@dimen/half_standard_margin"
        android:paddingBottom="@dimen/half_standard_margin"
        android:background="@drawable/popup_menu_item_bg"
        android:gravity="center_vertical"
        android:focusable="true"
        android:clickable="true"
        >

        <com.joooonho.SelectableRoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_flag_uk"
            android:scaleType="centerCrop"
            app:sriv_left_top_corner_radius="3dp"
            app:sriv_right_top_corner_radius="3dp"
            app:sriv_left_bottom_corner_radius="3dp"
            app:sriv_right_bottom_corner_radius="3dp"
            />
        <TextView
            android:layout_marginLeft="@dimen/standard_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vpn_name_uk"
            android:textColor="@color/primary_white_text"
            android:textSize="@dimen/medium_text"
            />
    </LinearLayout>
</LinearLayout>
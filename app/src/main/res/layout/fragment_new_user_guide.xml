<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.androapplite.shadowsocks.fragment.NewUserGuideFragment">

    <ImageView
        android:layout_width="@dimen/user_guide_image_size"
        android:layout_height="@dimen/user_guide_image_size"
        android:src="@drawable/new_user_guide_1"
        android:id="@+id/user_guide_image"
        android:layout_centerInParent="true"
        android:paddingTop="40dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_above="@+id/user_guide_image"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_guide_1"
            android:textColor="@color/secondary_black_text"
            android:textSize="@dimen/large_text"
            android:layout_marginTop="@dimen/standard_margin"
            android:id="@+id/user_guide_title"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_guide_1_2"
            android:textColor="@color/secondary_black_text"
            android:textSize="@dimen/large_text"
            android:gravity="center_horizontal"
            android:id="@+id/user_guide_explain"
            android:layout_marginTop="@dimen/standard_margin"

            />
    </LinearLayout>




</RelativeLayout>

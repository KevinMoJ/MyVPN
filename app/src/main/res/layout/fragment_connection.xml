<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.androapplite.shadowsocks.fragment.ConnectionFragment">

    <FrameLayout
        android:layout_width="@dimen/connection_button_outer"
        android:layout_height="@dimen/connection_button_outer"
        android:background="@drawable/connection_button_shadow"
        android:layout_centerHorizontal="true">
        <View
            android:layout_width="@dimen/connection_button_inner"
            android:layout_height="@dimen/connection_button_inner"
            android:background="@drawable/connection_button_normal_color"
            android:layout_gravity="center"
            ></View>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/connection_button_windmill"
            android:layout_gravity="center"/>
    </FrameLayout>

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/hello_blank_fragment" />

</RelativeLayout>

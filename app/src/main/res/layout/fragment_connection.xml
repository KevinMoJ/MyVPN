<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.androapplite.shadowsocks.fragment.ConnectionFragment"
    android:background="@color/colorPrimary"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/world_map"
        android:scaleType="fitXY"
        />

    <FrameLayout
        android:layout_width="@dimen/connection_button_outer"
        android:layout_height="@dimen/connection_button_outer"
        android:layout_centerInParent="true"
        android:id="@+id/connection_button_bg"
        android:background="@drawable/shadow"
        android:padding="13dp">
        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/tap_to_connect"
            android:textSize="@dimen/large_text"
            android:textColor="@color/colorPrimary"
            android:textAllCaps="false"
            android:id="@+id/connection_button_text"
            android:background="@null"/>
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/connection_button"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:id="@+id/connection_button"
            android:background="@null"
            />
    </FrameLayout>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_result_admob_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/activity_result_ad_admob_poster"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_140"
            android:scaleType="centerCrop"
            android:gravity="center"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/adsplugin_ic_ad"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/activity_result_ad_icon"
        android:layout_width="@dimen/common_40"
        android:layout_height="@dimen/common_40"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/activity_horizontal_margin"/>

    <TextView
        android:id="@+id/activity_result_ad_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:textColor="@color/primary_white_text"
        android:textSize="@dimen/common_text_size_16sp"/>

    <TextView
        android:id="@+id/activity_result_ad_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/primary_white_text"
        android:textSize="@dimen/common_text_size_12sp"/>

    <TextView
        android:id="@+id/activity_result_ad_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:textColor="@color/primary_white_text"
        android:textSize="@dimen/common_text_size_14sp"/>

    <Button
        android:id="@+id/activity_result_ad_bt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_50"
        android:layout_marginTop="@dimen/common_30"
        android:background="@color/connect_blue"
        android:text="@string/connect_result_ad_bt"
        android:textAllCaps="true"
        android:textColor="@color/primary_white_text"/>
</LinearLayout>

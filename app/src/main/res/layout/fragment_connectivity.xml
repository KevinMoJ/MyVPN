<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.androapplite.shadowsocks.fragment.ConnectivityFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/message_frame"
            android:text="asdfdfdfdfd"
            android:textColor="@color/primary_white_text"
            android:padding="10dp"
            android:textSize="@dimen/large_text"
            android:textStyle="bold"
            />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/triangle"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="188dp"
        android:layout_height="188dp"
        >
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:indeterminate="false"
            android:progressDrawable="@drawable/connecting_phase_1"
            style="?android:attr/progressBarStyleHorizontal"
            android:max="360"
            android:progress="50"
            />
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/connectivity_button"/>
    </FrameLayout>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.androapplite.shadowsocks.fragment.ConnectFragment">
    <View
        android:layout_width="145dp"
        android:layout_height="145dp"
        android:background="@drawable/big_circle"
        android:layout_gravity="center"
        />
    <ImageView
        android:layout_width="90dp"
        android:layout_height="180dp"
        android:src="@drawable/loading"
        android:tint="@color/button_green"
        android:layout_gravity="center"
        android:layout_marginLeft="45dp"
        />
    <View
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="@drawable/medium_circle"
        android:layout_gravity="center"
        />
    <Button
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_gravity="center"
        android:background="@drawable/connect_btn"
        />

</FrameLayout>

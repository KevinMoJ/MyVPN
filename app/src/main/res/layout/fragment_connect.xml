<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.androapplite.shadowsocks.fragment.ConnectFragment">
    <FrameLayout
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center_horizontal">
        <View
            android:layout_width="163dp"
            android:layout_height="163dp"
            android:background="@drawable/big_circle"
            android:layout_gravity="center"
            />

        <Button
            android:id="@+id/connect_button"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:background="@drawable/connect_btn"
            android:textAllCaps="false"
            android:textColor="@color/primary_white_text"
            android:textSize="@dimen/small_text"/>

        <ImageView
            android:layout_width="131dp"
            android:layout_height="131dp"
            android:src="@drawable/middle_circle"
            android:layout_gravity="center"
            android:id="@+id/loading"
            android:scaleType="fitXY"
            />

        <ImageView
            android:id="@+id/connect_status"
            android:layout_width="@dimen/common_120"
            android:layout_height="@dimen/common_120"
            android:layout_gravity="center"
            android:scaleType="center"
            android:src="@drawable/connect_normal_icon"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/standard_margin"
        android:paddingRight="@dimen/standard_margin"
        android:background="@drawable/used_time_bg"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/large_text"
            android:text="@string/free_used_time2"
            android:textColor="@color/free_used_time"
            android:layout_marginRight="@dimen/half_standard_margin"
            android:id="@+id/free_used_time"
            android:visibility="gone"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/large_text"
            android:text="00:00"
            android:textColor="@color/primary_white_text"
            android:id="@+id/message"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>
</LinearLayout>
